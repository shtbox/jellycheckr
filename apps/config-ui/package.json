{
  "name": "jellycheckr-config-ui",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build:js": "esbuild src/index.tsx --bundle --platform=browser --format=iife --target=es2018 --jsx=automatic --jsx-import-source=preact --outfile=dist/jellycheckr-config-ui.bundle.js",
    "build:css": "tailwindcss -c tailwind.config.cjs -i src/tailwind.css -o dist/jellycheckr-config-ui.css --minify",
    "build:bundle": "npm run build:js && npm run build:css"
  },
  "dependencies": {
    "@preact/signals": "^1.3.2",
    "preact": "^10.24.3"
  },
  "devDependencies": {
    "esbuild": "^0.25.10",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.8.2"
  }
}
